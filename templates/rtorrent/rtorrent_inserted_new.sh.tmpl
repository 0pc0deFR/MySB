            if [ "${bState}" -eq 0 ]; then
                xmlrpc2scgi.py scgi://localhost:${nCgiPort} t.is_enabled.set ${sInfoHash}:${nId} >>"${sLogFile}"
                bCleaned=1
            else
                [[ ${bAnnoncersCheck} -eq 1 ]] && mysql ${sSqlParams} -e "INSERT INTO annoncers (scgi_port,info_hash,id) VALUES ('${nCgiPort}', '${sInfoHash}', '${nId}');" -v
            fi
        done
        if [ ${bCleaned} -eq 1 ]; then
            {
                echo "Cleaning annoncers completed !"
                echo "--------------"
            } >>"${sLogFile}"
        fi
    fi

    #### Step 6 - Prepare annoncers (UDP, HTTP & HTTPs) list for GetTrackersCert.bsh script
    if [[ ${nContinue} -eq 1 ]] && [[ ${bAnnoncersCheck} -eq 1 ]]; then
        bExecute=0
        sTempLocalFile="$(mktemp)"
